<h1>my portfolio</h1>
<div class="search_area">
	<h3>search stock</h3>
	<%= form_tag search_stock_path, remote: true, method: :get do %>
		<div class="form-group row">
			<div class="col-sm-9">
				<%= text_field_tag :stock, params[:stock], placeholder:"stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
			</div>

			<div class="col-sm-3">
				<%= button_tag type: :submit, class:"btn btn-sucess" do %>
				<%= fa_icon "search 2x" %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
<div id="result">
	
</div>

 <% if !@tracked_stock.empty? %>
 	<%= render "stocks/list"%>
 <% end %>


